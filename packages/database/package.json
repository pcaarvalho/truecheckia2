{
  "name": "@truecheckia/database",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:production": "prisma migrate deploy --schema prisma/schema.prisma",
    "db:migrate:preview": "prisma migrate deploy --schema prisma/schema.prisma",
    "db:studio": "prisma studio",
    "db:seed": "cd ../.. && DATABASE_URL=\"postgresql://postgres:postgres@localhost:5432/truecheckia?schema=public\" npx tsx packages/database/src/seed.ts",
    "db:seed:production": "npx tsx src/seed.ts",
    "db:reset:preview": "prisma migrate reset --force --skip-seed"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prisma": "^5.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
