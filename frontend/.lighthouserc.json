{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:4173",
        "http://localhost:4173/login",
        "http://localhost:4173/register"
      ],
      "startServerCommand": "npm run serve",
      "startServerReadyPattern": "Local:.*:4173",
      "numberOfRuns": 3
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.9}],
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:best-practices": ["error", {"minScore": 0.9}],
        "categories:seo": ["error", {"minScore": 0.9}],
        "categories:pwa": ["warn", {"minScore": 0.8}],
        
        "first-contentful-paint": ["error", {"maxNumericValue": 1800}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 2500}],
        "first-input-delay": ["error", {"maxNumericValue": 100}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        "speed-index": ["error", {"maxNumericValue": 3000}],
        "interactive": ["error", {"maxNumericValue": 3900}],
        
        "unused-javascript": ["warn", {"maxLength": 3}],
        "unused-css-rules": ["warn", {"maxLength": 3}],
        "render-blocking-resources": ["warn", {"maxLength": 2}],
        "total-byte-weight": ["error", {"maxNumericValue": 2048000}],
        "dom-size": ["warn", {"maxNumericValue": 1500}],
        
        "uses-optimized-images": "error",
        "uses-webp-images": "warn",
        "efficient-animated-content": "warn",
        "uses-responsive-images": "error",
        
        "is-on-https": "off",
        "uses-http2": "off"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}