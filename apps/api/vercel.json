{
  "version": 2,
  "builds": [
    {
      "src": "dist/server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/server.js"
    }
  ],
  "functions": {
    "dist/server.js": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/webhooks/cron/maintenance",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/webhooks/cron/aggregate-stats",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/webhooks/cron/clean-notifications",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/webhooks/cron/reset-credits",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/webhooks/cron/process-renewals",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/webhooks/cron/check-low-credits",
      "schedule": "0 10 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"]
}