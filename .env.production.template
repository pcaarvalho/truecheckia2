# ==========================================
# VERCEL PRODUCTION ENVIRONMENT VARIABLES
# ==========================================
# Use this template to configure production environment in Vercel
# Run: npx vercel env add [VAR_NAME] production
# Or: ./scripts/setup-vercel-env.sh production

# ==========================================
# CRITICAL BACKEND VARIABLES (REQUIRED)
# ==========================================

# Database Configuration (Neon PostgreSQL)
DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require&pgbouncer=true"
DIRECT_URL="postgresql://username:password@host:5432/database?sslmode=require"
SHADOW_DATABASE_URL="postgresql://username:password@host:5432/shadow_db?sslmode=require"

# Redis Configuration (Upstash)
UPSTASH_REDIS_REST_URL="https://region.rest.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# OpenAI API
OPENAI_API_KEY="sk-your-live-openai-api-key"
OPENAI_ORG_ID="org-your-org-id"

# Authentication & Security
JWT_SECRET="your-super-secure-jwt-secret-256-bits-minimum"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-256-bits-minimum"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Serverless Security
WEBHOOK_SECRET="random-string-for-webhook-authentication-64-chars"
CRON_SECRET="random-string-for-cron-authentication-64-chars"

# ==========================================
# PAYMENT PROCESSING (STRIPE LIVE)
# ==========================================
STRIPE_SECRET_KEY="sk_live_your-live-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-live-stripe-webhook-secret"
STRIPE_PUBLISHABLE_KEY="pk_live_your-live-stripe-publishable-key"
STRIPE_PRO_PRICE_ID="price_your_live_pro_price_id"
STRIPE_ENTERPRISE_PRICE_ID="price_your_live_enterprise_price_id"

# ==========================================
# EMAIL SERVICE (RESEND)
# ==========================================
RESEND_API_KEY="re_your-live-resend-api-key"
RESEND_FROM_EMAIL="TrueCheckIA <noreply@yourdomain.com>"

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
NODE_ENV="production"
FRONTEND_URL="https://yourdomain.com"
API_BASE_URL="https://yourdomain.com"
CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# ==========================================
# PERFORMANCE & LIMITS
# ==========================================
RATE_LIMIT_MAX="1000"
RATE_LIMIT_WINDOW_MS="900000"
CACHE_TTL="86400"

# ==========================================
# CRITICAL FRONTEND VARIABLES (VITE_)
# ==========================================
# These MUST be set in Vercel for frontend build

# API Configuration
VITE_API_BASE_URL="https://yourdomain.com/api"
VITE_APP_URL="https://yourdomain.com"

# Stripe Frontend
VITE_STRIPE_PUBLISHABLE_KEY="pk_live_your-live-stripe-publishable-key"

# Environment
VITE_ENV="production"

# Optional Analytics
VITE_POSTHOG_KEY=""
VITE_POSTHOG_HOST=""
VITE_SENTRY_DSN=""

# ==========================================
# MONITORING & OBSERVABILITY (OPTIONAL)
# ==========================================
SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""
SENTRY_AUTH_TOKEN=""

# ==========================================
# AUTO-SET BY VERCEL (INFO ONLY)
# ==========================================
# These are automatically provided by Vercel:
# VERCEL="1"
# VERCEL_ENV="production"
# VERCEL_URL="your-domain.vercel.app"
# VERCEL_REGION="iad1"
# VERCEL_GIT_COMMIT_SHA="..."
# VERCEL_GIT_COMMIT_REF="main"

# ==========================================
# CONFIGURATION VALIDATION
# ==========================================
# Run validation script after setting variables:
# ./scripts/validate-vercel-env.sh production