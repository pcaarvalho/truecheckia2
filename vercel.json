{
  "framework": "vite",
  "buildCommand": "cd frontend && npm ci && npm run build",
  "installCommand": "npm ci",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/health.ts": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://api.truecheckia.com/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}